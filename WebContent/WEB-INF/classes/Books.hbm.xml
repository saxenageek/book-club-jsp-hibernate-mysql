<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.google.library.Books" table="BOOKS">
		<meta attribute="class-description">
			This class contains the books detail. 
      </meta>
		<id name="id" type="int" column="id">
			<generator class="native" />
		</id>
		<property name="b_name" column="b_name" type="string" />
		<property name="b_author" column="b_author" type="string" />
		<property name="b_price" column="b_price" type="double" />
	</class>
</hibernate-mapping>